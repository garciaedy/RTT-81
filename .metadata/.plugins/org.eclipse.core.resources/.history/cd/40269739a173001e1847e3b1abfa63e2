package conditionalstaments;
import java.util.Scanner;
public class FindingAverage {

	public static void main(String[] args) {
			Scanner scanner = new Scanner(System.in);
			
			int n1,n2,n3;
			
			System.out.println("Enter three numbers to find average");
			n1 =scanner.nextInt();
			n2 =scanner.nextInt();
			n3 =scanner.nextInt();
			
			float average=(float)(n1+n2+n3)/3;
			
			if (average >=100) {
				System.out.println("The grade is A");

			}else if(average>= 90 && average <80) {
				System.out.println("Grade is a B");

			}else if(average>= 80 && average <70) {
				System.out.println("Grade is a C");

			}else if(average>= 70 && average <60) {
				System.out.println("Grade is a C");

			}else {
				System.out.println("Grade is a f");

			}



	}

}
